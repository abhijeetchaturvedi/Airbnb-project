            <form method="POST" action="/login"  class="needs-validation" novalidate>
                <div class="mb-3"><label for="username" class="form-label">Username:</label><input type="text" id="username" placeholder="Enter Username" name="username"  class="form-control" required > 
                    
                   </div>
                 
                <div class="mb-3"><label for="password" class="form-label">Email:</label><input type="password" id="password" placeholder="Enter Pasword" name="password"  class="form-control" required > 
                    
                   </div> 
                   <button class="btn btn-success ">Login</button> 
            </form>
        </div>
    </div>