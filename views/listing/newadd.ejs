<% layout('/layouts/boilerplate') -%>
<body>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-lg rounded-4 border-0 p-4">
          <h2 class="mb-4 text-center fw-bold">Add New Listing</h2>

          <form method="POST" action="/listings" enctype="multipart/form-data" class="needs-validation" novalidate>

            <!-- Title -->
            <div class="mb-3">
              <label for="title" class="form-label fw-semibold">Title</label>
              <input type="text" name="newdata[title]" placeholder="Enter Title" class="form-control rounded-3" required>
              <div class="valid-feedback">Nice Title</div>
              <div class="invalid-feedback">Please Enter A Valid Title</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label fw-semibold">Description</label>
              <textarea name="newdata[description]" placeholder="Enter description here" rows="4" class="form-control rounded-3" required></textarea>
              <div class="valid-feedback">Nice Description</div>
              <div class="invalid-feedback">Please Enter A Valid Description</div>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
              <label for="image" class="form-label fw-semibold">Upload Image</label>
              <input type="file" name="newdata[image]" class="form-control rounded-3" required>
            </div>

            <!-- Location -->
            <div class="mb-3">
              <label for="location" class="form-label fw-semibold">Location</label>
              <input type="text" name="newdata[location]" placeholder="Enter location" class="form-control rounded-3" required>
              <div class="valid-feedback">Nice Location</div>
              <div class="invalid-feedback">Please Enter A Valid Location</div>
            </div>

            <!-- Price and Country -->
            <div class="row">
              <div class="mb-3 col-md-4">
                <label for="price" class="form-label fw-semibold">Price</label>
                <input type="number" name="newdata[price]" placeholder="Enter price" class="form-control rounded-3" required>
                <div class="valid-feedback">Nice Pricing</div>
                <div class="invalid-feedback">Please Enter A Valid Pricing</div>
              </div>
              <div class="mb-3 col-md-8">
                <label for="country" class="form-label fw-semibold">Country</label>
                <input type="text" name="newdata[country]" placeholder="Enter country" class="form-control rounded-3" required>
                <div class="valid-feedback">Nice Country</div>
                <div class="invalid-feedback">Please Enter A Valid Country</div>
              </div>
            </div>

            <!-- Submit -->
            <div class="text-center mt-4">
              <button type="submit" class="btn btn-dark px-4 py-2 rounded-pill fw-semibold shadow-sm transition-fast">
                Add
              </button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Styling for animations and hover -->
  <style>
    .transition-fast {
      transition: all 0.25s ease-in-out;
    }

    .btn-dark:hover {
      background-color: #fe1900;
      color: white;
      transform: scale(1.05);
    }
  </style>

  <script src="/js/script.js"></script>
</body>
