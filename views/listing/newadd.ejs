<% layout('/layouts/boilerplate') -%>
<body>
    <br>
    <div class="row">
        <div class="col-6 offset-3">
    <form method="POST"  action="/listings"  enctype="multipart/form-data"    class="needs-validation" novalidate > 
        
       
       
       <div class="mb-3"><label for="title" class="form-label">Title:</label><input type="text" placeholder="Enter Title" name="newdata[title]"  class="form-control" required > 
        <div class="valid-feedback">Nice Title</div>
        <div class="invalid-feedback">Please Enter A Valid Title</div>
       </div>
        <div class="mb-3">

            <label for="description" class="form-label">Description:</label><textarea type="text" name="newdata[description]" placeholder="Enter description Here" class="form-control" required></textarea> 
            <div class="valid-feedback">Nice Description</div>
            <div class="invalid-feedback">Please Enter A Valid Description</div>
        </div>
      
        <div class="mb-3">

            <label for="image" class="form-label">Upload Image:</label><input type="file" name="newdata[image]"  class="form-control" required > 
           
        </div>

<div class="mb-3">
    
    <label for="location" class="form-label">Location:</label><input placeholder="Enter location" type="text" name="newdata[location]" class="form-control" required></label> 
    <div class="valid-feedback">Nice Location</div>
    <div class="invalid-feedback">Please Enter A Valid Location</div>
</div>


<div class="row"><div class="mb-3 col-4" >
    <label for="price" class="form-label">Price:</label><input type="number" placeholder="Enter price" name="newdata[price]" class="form-control" required></label> 
    <div class="valid-feedback">Nice Pricing</div>
    <div class="invalid-feedback">Please Enter A Valid Pricing</div>
</div>

<div class="mb-3 col-8">
    <label for="country" class="form-label">Country:</label><input type="text" placeholder="Enter country" name="newdata[country]" class="form-control" required></label> 
    <div class="valid-feedback">Nice Country</div>
                            <div class="invalid-feedback">Please Enter A Valid Country</div>
</div></div>


<br>
<div class="mb-3">
    <button class="add-btn ">Add</button>
</div>


  
    
    
</form></div>
    </div>


   <script src="/js/script.js"></script>
</body>
