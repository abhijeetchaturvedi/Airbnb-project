<% layout('/layouts/boilerplate') -%>
<body>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-lg rounded-4 border-0 p-4">
          <h2 class="mb-4 text-center fw-bold">Edit Listing</h2>

          <form method="POST" action="/listings/<%= data._id %>/edit?_method=PUT" enctype="multipart/form-data" class="needs-validation" novalidate>
            
            <!-- Title -->
            <div class="mb-3">
              <label for="title" class="form-label fw-semibold">Title</label>
              <input name="newdata[title]" type="text" class="form-control rounded-3" value="<%= data.title %>" required>
              <div class="valid-feedback">Nice Title</div>
              <div class="invalid-feedback">Please Enter A Valid Title</div>
            </div>

            <!-- Price -->
            <div class="mb-3">
              <label for="price" class="form-label fw-semibold">Price</label>
              <input name="newdata[price]" type="number" class="form-control rounded-3" value="<%= data.price %>" required>
              <div class="valid-feedback">Nice Pricing</div>
              <div class="invalid-feedback">Please Enter A Valid Pricing</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label fw-semibold">Description</label>
              <textarea name="newdata[description]" class="form-control rounded-3" rows="4" required><%= data.description %></textarea>
              <div class="valid-feedback">Nice Description</div>
              <div class="invalid-feedback">Please Enter A Valid Description</div>
            </div>

            <!-- Original Image -->
            <div class="mb-3 text-center">
              <p class="fw-semibold">Original Image</p>
              <img src="<%= data.image.url %>" alt="Listing Image" class="img-fluid rounded-3 shadow-sm" style="max-height: 250px;">
            </div>

            <!-- Upload New Image -->
            <div class="mb-3">
              <label for="image" class="form-label fw-semibold">Change Image</label>
              <input name="newdata[image]" type="file" class="form-control rounded-3">
            </div>

            <!-- Location Info -->
            <div class="row">
              <div class="mb-3 col-md-4">
                <label for="country" class="form-label fw-semibold">Country</label>
                <input name="newdata[country]" type="text" class="form-control rounded-3" value="<%= data.country %>" required>
                <div class="valid-feedback">Nice Country</div>
                <div class="invalid-feedback">Please Enter A Valid Country</div>
              </div>
              <div class="mb-3 col-md-8">
                <label for="location" class="form-label fw-semibold">Location</label>
                <input name="newdata[location]" type="text" class="form-control rounded-3" value="<%= data.location %>" required>
                <div class="valid-feedback">Nice Location</div>
                <div class="invalid-feedback">Please Enter A Valid Location</div>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-4">
              <button type="submit" class="btn btn-dark px-4 py-2 rounded-pill fw-semibold shadow-sm transition-fast">
                Save Changes
              </button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>

  <style>
    .transition-fast {
      transition: all 0.25s ease-in-out;
    }
    .btn-dark:hover {
      background-color: #fe1900;
      color: white;
      transform: scale(1.05);
    }
  </style>
</body>
