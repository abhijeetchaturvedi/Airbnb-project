
<% layout('/layouts/boilerplate') -%>
<body>
   <br>
        <div class="row ">
            <div class="col-6 offset-3">
                <form method="POST" action="/listings/<%=data._id%>/edit?_method=PUT" enctype="multipart/form-data" class="needs-validation" novalidate >
                    
                    <div class="mb-3">
                        <label for="title" class="form-label">Title:</label>
                        <input name="newdata[title]"type="text" class="form-control" value="<%=data.title%>" required>
                        <div class="valid-feedback">Nice Title</div>
                        <div class="invalid-feedback">Please Enter A Valid Title</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="price" class="form-label">Price:</label>
                        <input name="newdata[price]"type="number" class="form-control" value="<%=data.price%>" required>
                        <div class="valid-feedback">Nice Pricing</div>
                        <div class="invalid-feedback">Please Enter A Valid Pricing</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea name="newdata[description]" class="form-control"  required><%=data.description%></textarea>
                        <div class="valid-feedback">Nice Description</div>
                        <div class="invalid-feedback">Please Enter A Valid Description</div>
                    </div>
                    
                   
                    <div class="mb-3">
                        <p>Original Image</p>
                        <br>
                       <img src="<%=data.image.url%>" " alt="">
                        
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image:</label>
                        <input name="newdata[image]" type="file" class="form-control"  >
                        
                    </div>

                    <div class="row">
                        <div class="mb-3 col-4">
                            <label for="country" class="form-label">Country:</label>
                            <input name="newdata[country]" type="text" class="form-control" value="<%=data.country%>" required>
                            <div class="valid-feedback">Nice Country</div>
                            <div class="invalid-feedback">Please Enter A Valid Country</div>
                        </div>
                        
                        <div class="mb-3 col-8">
                            <label for="location" class="form-label">Location:</label>
                            <input name="newdata[location]" type="text" class="form-control" value="<%=data.location%>" required>
                            <div class="valid-feedback">Nice Location</div>
                            <div class="invalid-feedback">Please Enter A Valid Location</div>
                        </div>
                        
                        
                    </div>
                   
                 <br>
                    
                    <div class="mb-3 ">
                        <button class="btn btn-primary ">Submit</button>
                    </div>
                    
                </form>
            </div>
        </div>
 
</body>
